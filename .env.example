# Copia questo file come .env e inserisci i valori reali

# Credenziali API Fatture in Cloud
FATTURE_CLIENT_ID=your_client_id_here
FATTURE_CLIENT_SECRET=your_client_secret_here
FATTURE_APP_ID=your_app_id_here

# Configurazione App
FATTURE_ADMIN_EMAIL=your_admin_email@example.com
FATTURE_REDIRECT_URI=https://your-site.netlify.app/auth-callback.html

# API URLs (non modificare)
FATTURE_API_BASE_URL=https://api-v2.fattureincloud.it
FATTURE_AUTH_URL=https://api-v2.fattureincloud.it/oauth/authorize
FATTURE_TOKEN_URL=https://api-v2.fattureincloud.it/oauth/token

# Scopes richiesti (non modificare)
FATTURE_SCOPES=entity.clients:r entity.clients:a issued_documents.invoices:r issued_documents.invoices:a